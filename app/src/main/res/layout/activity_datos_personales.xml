<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerDatosPedido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            tools:context=".Activities.TotalizarPedido">

            <include layout="@layout/toolbar"
                android:id="@+id/toolbar"/>

            <TextView
                android:id="@+id/tvMisDatos"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:fontFamily="@font/segoeprint2"
                android:text="MIS DATOS"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="@color/naranjaBocailo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintVertical_bias="0.033"/>

            <View
                android:id="@+id/vSeparador2"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:background="@color/naranjaBocailo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvMisDatos"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/etNombreDatos"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="432dp"
                android:background="@drawable/bordesredondeados"
                android:hint="Nombre *"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvMisDatos"
                app:layout_constraintVertical_bias="0.372" />

            <EditText
                android:id="@+id/etApellidosDatos"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="432dp"
                android:background="@drawable/bordesredondeados"
                android:hint="Apellidos *"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etNombreDatos"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/etEmailDatos"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordesredondeados"
                android:hint="Email *"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etApellidosDatos"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/etTelefonoDatos"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bordesredondeados"
                android:hint="Teléfono *"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEmailDatos"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/etCalleDatos"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bordesredondeados"
                android:hint="Calle, número, bloque, piso *"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etTelefonoDatos"
                app:layout_constraintVertical_bias="0.0" />

            <AutoCompleteTextView
                android:id="@+id/etPoblacionDatos"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bordesredondeados"
                android:hint="Población *"
                android:clickable="false"
                android:completionThreshold="0"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etCalleDatos"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/etCpPedido"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bordesredondeados"
                android:hint="Código Postal *"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPoblacionDatos"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnModificar"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:fontFamily="@font/segoeprint2"
                android:text="MODIFICAR"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etCpPedido"
                app:layout_constraintVertical_bias="0.494" />

            <Button
                android:id="@+id/btnVolverDatos"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeprint2"
                android:text="VOLVER"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.253"
                app:layout_constraintStart_toEndOf="@+id/btnModificar"
                app:layout_constraintTop_toBottomOf="@+id/etCpPedido"
                app:layout_constraintVertical_bias="0.494" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_viewdatospersonales"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        app:headerLayout="@layout/encabezado"
        app:menu="@menu/menu_cliente"/>

</androidx.drawerlayout.widget.DrawerLayout>
